<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.techexpert.bankingapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo1"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo1"
        android:supportsRtl="true"
        android:theme="@style/AppTheme_white">

        <activity android:name=".SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name=".UserListActivity"
            android:screenOrientation="portrait"
            android:label="Banking System"
            android:theme="@style/AppTheme">
        </activity>

        <activity android:name=".UserDataActivity"
            android:parentActivityName=".UserListActivity"
            android:screenOrientation="portrait"
            android:label="User Details"
            android:theme="@style/AppTheme"/>

        <activity android:name=".SendToUserActivity"
            android:screenOrientation="portrait"
            android:label="Transfer Money"
            android:theme="@style/AppTheme"/>

        <activity android:name=".HistoryListActivity"
            android:parentActivityName=".UserListActivity"
            android:screenOrientation="portrait"
            android:label="Transactions"
            android:theme="@style/AppTheme"/>

    </application>

</manifest>